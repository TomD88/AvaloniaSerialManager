<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AvaloniaSerialManager.ViewModels;assembly=AvaloniaSerialManager"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="250"
        Height="250"
        Width="250"
        x:Class="AvaloniaSerialManager.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaSerialManager">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
  <DockPanel>
    <Button DockPanel.Dock="Top" x:Name="GetSerialPortsButton"
            Content="GetSerialPorts" 
            Command="{Binding $parent[Window].DataContext.GetSerialPortsCommand}"/>
    <TextBlock DockPanel.Dock="Bottom" Text="{Binding SerialPortsString}"/>
  </DockPanel>
    
  
    
</Window>
